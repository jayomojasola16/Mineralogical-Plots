    "Al2O3": [None]*54,
    "SiO2": [100.00]*54,
    "P2O5": [None]*54,
    "Cl": [None]*54,
    "CaO": [None]*54,
    "MnO": [None]*54,
    "Fe2O3": [None]*54
}

